import speech_recognition as sr
import pyttsx3
import pywhatkit
import datetime
import wikipedia
import pyjokes
import random

engine=pyttsx3.init()

mixer.init()

voices=engine.getProperty('voices') #for female voice
engine.setProperty('voice',voices[0].id)

engine.say("Hi I AM FRIDAY")
engine.say("What can i do for you")
engine.runAndWait()


def take(command):
    engine.say(command)
    engine.runAndWait()

def take_command():
    listener=sr.Recognizer() #identify the voice
    try:
        with sr.Microphone() as source:
            print("listening....")
            voice=listener.listen(source) #will listen to the voice 
            command=listener.recognize_google(voice)
            command=command.lower()
            if 'friday' in command:
                command=command.replace('friday','')
                print(command)

                
    except:
        pass

def run_friday():
    command=take_command()
    if 'play' in command:
        song=command.replace('play','')
        take('playing'+song)
        pywhatkit.playonyt(song)
    elif 'time' in command:
        time=datetime.datetime.now().strftime('%H:%M %p')
        print(time)
        take("Current time is "+time)
    elif 'who is' in command:
        person=command.replace('who is','')
        info=wikipedia.summary(person,5)
        print(info)
        take(info)
    elif "joke" in command:
        joke=pyjokes.get_joke()
        print(joke)
        take(joke)
    elif 'i love you' in command:
        print("SORRY! I Have a girlfriend")
        take('SORRY I have a girlfriend')
    elif 'are you single' in command:
        print("No I am in relationship with Siri")
        take("No I am in relationship with Siri")
    elif 'do a toss' in command:
        choices=['Heads','Tails']
        output=random.choice(choices)
        print(output)
        take(output)
    elif 'roll a dice' in command:
        choices=[1,2,3,4,5,6]
        output=random.choice(choices)
        print(output)
        take("The output is {}".format(output))
    else :
        print("I didnt get what u said! Say the command again")
        take('I didnt get what u said! Say the command again')
while True:
    run_friday()  
